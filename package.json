{
  "name": "simpl.db",
  "version": "0.0.3",
  "description": "An easy-to-use local database using JSON to store data.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "preversion": "npm run lint",
    "version": "npm run format && git add .",
    "postversion": "git commit -m \"New version release\" && git push origin main && git push origin main --tags",
    "publishPackage": "npm version patch --no-git-tag-version && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/5antos/simpl.db.git"
  },
  "keywords": [
    "database",
    "db",
    "easy",
    "json",
    "local",
    "lightweight",
    "quick",
    "simple"
  ],
  "author": "5antos#4876",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/5antos/simpl.db/issues"
  },
  "homepage": "https://github.com/5antos/simpl.db#readme",
  "devDependencies": {
    "@types/lodash": "^4.14.168",
    "@types/node": "^15.0.2",
    "prettier": "^2.2.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "files": [
    "lib/**/*"
  ]
}
